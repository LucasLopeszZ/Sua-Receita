<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#E7F0FF"
    android:padding="16dp"
    android:radius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNome"
            android:text="Nome da Receita"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#D8E74C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtCategoria"
            android:text="Categoria"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtInfo"
            android:text="Tempo - Porções - Dificuldade"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtIngredientes"
            android:text="Ingredientes:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#D8E74C"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtListaIngredientes"
            android:text="Lista"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtModoPreparo"
            android:text="Modo de Preparo:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#D8E74C"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtListaModo"
            android:text="Preparo"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtObs"
            android:text="Observações:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#D8E74C"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtObservacoes"
            android:text="Observações detalhadas"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
